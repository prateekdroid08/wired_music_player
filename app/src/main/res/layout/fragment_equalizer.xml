<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="#e9e9e9"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <CheckBox android:id="@+id/enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enabled"
                android:textColor="#000"/>

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                />


            <Button android:id="@+id/flat"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/flat"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/bass_boost_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/bass_boost"
            android:layout_marginTop="15dp"
            android:textColor="#000"/>

        <SeekBar android:id="@+id/bass_boost"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:progress="0"
            android:thumb="@drawable/seekbar_thumb"
            android:progressDrawable="@drawable/progress_drawable"
            android:secondaryProgress="0"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <com.avfplayer.uicomponent.VerticalSeekBar
                android:id="@+id/slider_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="50"
                android:thumb="@drawable/seekbar_thumb"
                android:progressDrawable="@drawable/progress_drawable"
                android:secondaryProgress="50"
                android:layout_weight="1"/>

            <com.avfplayer.uicomponent.VerticalSeekBar
                android:id="@+id/slider_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:max="100"
                android:progress="50"
                android:thumb="@drawable/seekbar_thumb"
                android:progressDrawable="@drawable/progress_drawable"
                android:secondaryProgress="50"
                android:layout_weight="1"/>

            <com.avfplayer.uicomponent.VerticalSeekBar
                android:id="@+id/slider_3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:max="100"
                android:progress="50"
                android:thumb="@drawable/seekbar_thumb"
                android:progressDrawable="@drawable/progress_drawable"
                android:secondaryProgress="50"
                android:layout_weight="1"/>

            <com.avfplayer.uicomponent.VerticalSeekBar
                android:id="@+id/slider_4"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="50"
                android:thumb="@drawable/seekbar_thumb"
                android:progressDrawable="@drawable/progress_drawable"
                android:secondaryProgress="50"
                android:layout_weight="1"/>

            <com.avfplayer.uicomponent.VerticalSeekBar
                android:id="@+id/slider_5"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="50"
                android:thumb="@drawable/seekbar_thumb"
                android:progressDrawable="@drawable/progress_drawable"
                android:secondaryProgress="50"
                android:layout_weight="1"/>

            <com.avfplayer.uicomponent.VerticalSeekBar
                android:id="@+id/slider_6"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="50"
                android:thumb="@drawable/seekbar_thumb"
                android:progressDrawable="@drawable/progress_drawable"
                android:secondaryProgress="50"
                android:layout_weight="1"/>

            <com.avfplayer.uicomponent.VerticalSeekBar
                android:id="@+id/slider_7"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="50"
                android:thumb="@drawable/seekbar_thumb"
                android:progressDrawable="@drawable/progress_drawable"
                android:secondaryProgress="50"
                android:layout_weight="1"/>

            <com.avfplayer.uicomponent.VerticalSeekBar
                android:id="@+id/slider_8"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="50"
                android:thumb="@drawable/seekbar_thumb"
                android:progressDrawable="@drawable/progress_drawable"
                android:secondaryProgress="50"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/slider_label_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/slider_label_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="#000"/>


            <TextView
                android:id="@+id/slider_label_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="#000"/>


            <TextView
                android:id="@+id/slider_label_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="#000"/>


            <TextView
                android:id="@+id/slider_label_5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="#000"/>


            <TextView
                android:id="@+id/slider_label_6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="#000"/>


            <TextView
                android:id="@+id/slider_label_7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="#000"/>


            <TextView
                android:id="@+id/slider_label_8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="#000"/>
        </LinearLayout>

    </LinearLayout>










</LinearLayout>