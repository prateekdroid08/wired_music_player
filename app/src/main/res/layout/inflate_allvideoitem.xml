<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <com.avfplayer.uicomponent.PlayPauseView
        android:id="@+id/play_pause_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:stateListAnimator="@anim/abc_fade_out">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/relative_image"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1">

                <com.loopj.android.image.SmartImageView
                    android:id="@+id/tumbnail_img"
                    android:layout_width="110dp"
                    android:layout_height="110dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/player" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:id="@+id/video_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Dummmy Name.mp4"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/video_item_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26.6 MB"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/video_item_time_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00.50"
                    android:textSize="15sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3">

                <ImageView
                    android:id="@+id/img_moreicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bar_selector_white"
                    android:clickable="true"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha" />

            </RelativeLayout>
        </LinearLayout>


    </com.avfplayer.uicomponent.PlayPauseView>

</LinearLayout>
